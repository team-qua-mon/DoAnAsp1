            </div>
            <div class="form-group">
                <label asp-for="NgayBD" class="control-label"></label>
                <input asp-for="NgayBD" class="form-control" />
                <span asp-validation-for="NgayBD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayKT" class="control-label"></label>
                <input asp-for="NgayKT" class="form-control" />
                <span asp-validation-for="NgayKT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="TrangThai" type="hidden" value="1" />
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

