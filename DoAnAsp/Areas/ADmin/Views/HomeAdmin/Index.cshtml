
@{
    var listsp = ViewBag.SP as List<SanPhamModel>;
    ViewData["Title"] = "Index";
    Layout = "~/Areas/ADmin/Views/Shared/_Layout.cshtml";
}

<form asp-action="Index" method="get">
        <input type="hidden" name="Search" value="1" class="h-25" />
        <input type="submit" value="Thống Kê Sản Phẩm Có Khuyến Mãi" class=" btn btn-primary" />
 </form>
<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="card-title">Danh sách tài khoản</h4>
                <div class="d-flex">
                    <i data-feather="download"></i>
                </div>
            </div>
            <div>Số lượng sản phẩm: @listsp.Count</div>
            @if(ViewBag.GiaTri != null)
            {
                <div>Sản phẩm có giá trị khuyến mãi cao nhất là: @listsp[0].TenSP</div>
            }
            <div class="card-body px-0 pb-0">
                <div class="table-responsive">
                    <table class="table mb-0" id="table1" onsubmit="return jQueryAjaxPost(this);">
                        <thead>
                            <tr>
                                <th>
                                    <p>Tên sản phẩm</p>
                                </th>
                                <th>
                                    <p>Giá</p>
                                </th>
                                <th>
                                    <p>Số Lượng</p>
                                </th>
                                <th>
                                    <p>Hình ảnh</p>
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in listsp)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenSP)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Gia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Soluong)
                                    </td>
                                    <td class="chinhsua" id="chinhsua">
                                        @*@Html.DisplayFor(modelItem => item.HinhAnh)*@
                                        <img src="~/Admin/ImgPro/@item.HinhAnh" alt="Alternate Text" class="w-100" />
                                    </td>


                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

